{
  "manifest_version": 2,
  "name": "Rotating Color Theme",
  "version": "1.0",
  "description": "Gives every window a different color",

  "icons": {
    "48": "icons/uncommon48.png",
    "96": "icons/uncommon96.png"
  },


  "permissions": [
    "storage",
    "theme"
  ],

  "background": {
    "scripts": [
      "lib/browser-polyfill.min.js",
      "background/background.js"
    ]
  },


  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "chrome_style": true
  }

}